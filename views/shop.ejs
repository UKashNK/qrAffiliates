<!DOCTYPE html>
<html lang="<%= defaultLanguage %>">

<head>
    <meta charset="UTF-8">
    <title><%= shop.name %></title>
    <meta name="description" content="<%= shop.description %>">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/shop.css"> <!-- Your custom CSS file -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Roboto:wght@400;700&display=swap" rel="stylesheet">
</head>

<body>
    <!-- Header -->
    <header class="navbar navbar-expand-lg navbar-dark">
        <!-- Navigation Bar -->
        <nav class="navbar navbar-expand-lg navbar-light ">
            <div class="container-fluid">
                <a class="navbar-brand" href="#"><%= shop.name %></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <% Object.keys(groupedByType).forEach(type => { %>
                            <li class="nav-item">
                                <a class="nav-link" href="#<%= type %>"><%= type %></a>
                            </li>
                        <% }) %>
                    </ul>
                </div>
            </div>
        </nav>
    </header>



    <!-- Main content -->
    <main>
        <% Object.keys(groupedByType).forEach(type => { %>
            <section class="item-group" id="<%= type %>">
                <h2><%= type %></h2>
                <div class="items-container row">
                    <% groupedByType[type].forEach(item => { %>
                        <div class="col-12 col-md-6 col-lg-4 item">
                            <div class="card">
                                <div class="row g-0 card-title">
                                    <!-- Item Name -->
                                    <h5 class="col-12 ">
                                        <a href="<%= item.affiliate_link %>" target="_blank"><strong><%= item.name %></strong></a>
                                    </h5>
                                </div>

                                <div class="row g-0">
                                    <!-- Image Column (4 columns) -->
                                    <div class="col-4">
                                        <% if (item.image) { %>
                                            <a href="<%= item.affiliate_link %>" target="_blank">
                                                <img src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" class="card-img" alt="<%= item.name %>">
                                            </a>
                                        <% } %>
                                    </div>

                                    <!-- Text and Button Column (8 columns) -->
                                    <div class="col-8">
                                        <div class="card-body">
                                            <!-- Item Description -->
                                            <div class="row">
                                                <div class="col-12">
                                                    <p class="card-text"><%= item.description %></p>
                                                </div>
                                            </div>

                                            <!-- Buy now -->
                                            <div class="row">
                                                <a href="<%= item.affiliate_link %>" target="_blank" class="btn btn-primary">Buy Now</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </section>
        <% }) %>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center p-3">
        <p class="Affiliate_Disclaimer ">We may earn commissions when you make purchases using links from this site.</p>
        <p>&copy; 2024 qreasy. All rights reserved. <a href="#">Privacy Policy</a></p>
    </footer>

    <!-- Bootstrap JS, Popper.js, JS scripts -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    <script src="/shop.js"></script> <!-- custom JS file -->
</body>

</html>
